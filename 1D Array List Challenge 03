list = []

name1 = str(input("Enter your first friend"))
name2 = str(input("Enter your second friend"))
name3 = str(input("Enter your third friend"))

list.append(name1)
list.append(name2)
list.append(name3)



ask = str(input("do you want to add another name? y or n")).lower()

if ask == "y":
  while ask == "y":
   name = str(input("enter another name"))
   list.append(name)
   
   ask = str(input("do you want to add another person? y or n")).lower()
  
  if ask == "n":
    print(list)
    
elif ask == "n":
  print(list)
    
